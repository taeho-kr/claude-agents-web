{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "command": "node .claude/hooks/block-destructive-git.js"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "command": "node .claude/hooks/typecheck-on-save.js"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit(./**)",
      "Write(./**)",
      "Glob",
      "Grep",
      "Bash"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~/)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(rm -r -f /)",
      "Bash(rm -r -f ~)",
      "Bash(rm -rf $HOME)",
      "Bash(rm -rf $USERPROFILE)",
      "Bash(rm -rf %USERPROFILE%)",
      "Bash(rm --recursive --force /)",
      "Bash(rm --recursive --force ~)",
      "Bash(: | :)",
      "Bash(:(){ :|:& };:)",
      "Bash(chmod -R 000 /)",
      "Bash(chmod -R 000 ~)",
      "Bash(> /dev/sda)",
      "Bash(dd if=/dev/zero of=/dev/sda)",
      "Bash(mkfs)",
      "Bash(format c:)"
    ]
  },
  "project": {
    "name": "dev-ai",
    "description": "Multi-agent development system for web services"
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "memory": {
    "directory": ".claude/memory",
    "persistent": {
      "preferences": ".claude/memory/context/preferences.md",
      "tech_stack": ".claude/memory/context/tech-stack.md",
      "conventions": ".claude/memory/context/conventions.md",
      "project_state": ".claude/memory/context/project-state.md"
    },
    "session": {
      "plans": "작업 계획 (planner 작성)",
      "notepads": "작업 메모 (append 전용)",
      "decisions": "결정 사항 기록",
      "artifacts": "산출물 (PRD, 디자인 스펙)",
      "reports": "분석 보고서"
    }
  },
  "skills": {
    "directory": ".claude/skills",
    "available": [
      "auth-flow",
      "crud-feature",
      "api-integration"
    ]
  },
  "commands": {
    "directory": ".claude/commands",
    "available": [
      "autopilot",
      "compose",
      "parallel",
      "review",
      "integration-test",
      "ralph"
    ]
  }
}
